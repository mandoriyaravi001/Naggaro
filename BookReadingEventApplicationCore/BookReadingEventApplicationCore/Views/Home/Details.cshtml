@model BookReadingEventApplicationCore.Models.DisplayEventViewModel;

@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Display Event Details </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DurationInHours)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DurationInHours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OtherDetails)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OtherDetails)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalInvitedToEvent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalInvitedToEvent)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Comment.Comments, htmlAttributes: new { @class = "" })
        </dt>
        <dd class="input-group col-md-6">
            @using (Html.BeginForm("Create", "Comment", new { id = Model.EventID }))
            {
                @Html.EditorFor(model => model.Comment.Comments, new { htmlAttributes = new { @class = "form-control " } })
                <span>&nbsp;</span>
                <br />
                <input style="display :inline" ; type="submit" value="post" class="btn btn-primary" />
            }


        </dd>
        <dt></dt>
        <dd><h6>Older Comments...</h6></dd>
        @foreach (var item in Model.Comments.OrderBy(c => c.DateTime))
        {
            <dd>

                @Html.DisplayFor(ModelItem => item.Comments)<br />

            </dd>

        }
    </dl>
</div>
<p>
    @if (string.IsNullOrEmpty(Convert.ToString(@Context.Session.GetString("Role"))) || Convert.ToString(@Context.Session.GetString("Role")).Equals(User))
    {
        @Html.ActionLink("Back To list", "Index");
    }
    else
    {
        @Html.ActionLink("Back To list", "AllEvents");
    }
</p>
